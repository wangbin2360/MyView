<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        />

    <com.example.myview.CircleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:circle_color="@color/colorAccent"
        android:padding="10dp" />

    <com.example.myview.CustomTitleView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:title_text="3330"
        app:title_text_color="#FFAA00"
        app:title_text_size="80sp" />

    <com.example.myview.CustomVolumnView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:volumn_dot_count="10"
        app:volumn_bg="@drawable/customize"
        app:volumn_split_size="20"
        app:volumn_first_color="@color/colorAccent"
        app:volumn_second_color="@color/colorPrimary"
        app:volumn_circle_width="10dp"/>
</LinearLayout>

